page {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #e6e2e2;
    border-bottom: 1px solid #e6e2e2;
}

.episode {
    flex: 1;
    margin-left: 20rpx;
    margin-top: 4rpx;
}

.like {
    margin-top: 6rpx;
}
.like_container {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content:flex-end;
    margin-right:30rpx;
}
.share-btn {
    margin-top: 14rpx;
    /* margin-left: 10rpx; */
}

.share {
    width: 35rpx;
    height: 35rpx;
}