/* components/movie-item/index.wxss */

view.movie-container {
    box-shadow: 2px 2px 3px #e3e3e3;
    flex-direction: column;
    width: 240rpx;
    height: 360rpx;
    margin-bottom: 40rpx;
    font-size: 25rpx;
    position: relative;
}

.movie-container image {
    width: 100%;
    border-radius: 2px;
}

.movie-container .desc {
    width: 100%;
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    padding: 10rpx 15rpx;
    background: #fff;
}

.movie-container .desc .rate {
    color: #e09015;
}

.movie-container .desc .title {
    display: inline-block;
    white-space: nowrap;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
}