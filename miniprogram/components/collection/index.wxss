/* components/collection/index.wxss */

.collection-container {
    position: relative;
    width: 240rpx;
    height: 360rpx;
    border: 1px solid #eee;
    border-radius: 3px;
    margin-bottom: 40rpx;
    padding: 20rpx 10rpx 40rpx;
}

.collection-container .like {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
}

.collection-container .back {
    width: 100%;
    height: 95%;
    border-radius: 50%;
    overflow: hidden;
}

.collection-container .title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    padding: 10rpx 0;
    font-size: 28rpx;
}