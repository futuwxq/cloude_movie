/* pages/profile/index.wxss */

.container .bg {
    width: 100%;
    height: 300rpx;
}

.avatar-position {
    position: absolute;
    top: 255rpx;
    left: 50%;
    margin-left: -188rpx;
}

view.avatar-container {
    margin-left: -60rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 50%;
}

.about-container {
    margin-top: 130rpx;
    display: flex;
    /* align-items: center; */
    padding-bottom: 20rpx;
    border-bottom: 1px solid #e6e2e2;
}

.avatar-container view {
    padding-left: 20rpx;
    color: #666;
}

.about-container .item {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    font-size: 23rpx;
    color: var(--themeColor);
}


