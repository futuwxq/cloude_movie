/**app.wxss**/
page,view,text,swiper,swiper-item,image,navigator {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  /* background-color: var(--backColor); */
}

.container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  /* 定义主题颜色 */
  --themeColor: #999;
  --backColor: #f5f5f5;
  /* 定义统一字体大小 假设设计稿是 375px
   1 px = 2 rpx */
  /* 14px */
  font-size:32rpx;
}