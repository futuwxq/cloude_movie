.container .header {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background:#fff; 
  color: var(--themeColor);
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  padding: 0 20rpx;
  align-items: center;
}
.container image {
  width: 34rpx;
  height: 34rpx;
}

.search-container{
    width: 85%;
    height: 60rpx;
    display: flex;
  background: var(--backColor);
  border-radius: 30rpx;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
  margin-right: 20rpx;
}
.search-container input {
  margin-left: 15rpx;
  width: 85%;
}
.cancle {
  color: #000;
}
.search-option {
  padding-top: 100rpx;
  padding-left: 40rpx;
}

.search-history, .search-hot {
  margin-top: 30rpx;
  position: relative ;
}

 .bar{
 width: 10rpx;
 height: 35rpx;
 background: #000;
 position: absolute;
 left: -20rpx;
 top: 5rpx;
}
 .text {
  margin-left: 10rpx;
}
 .search-list{
  display: flex;
}
 .search-list .tag {
 margin: 10rpx;
}