.about-container .item image {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.about-container .item .count {
    display: inline-block;
    line-height: 40rpx;
    color: #000;
    text-align: center;
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
    font-size: 30rpx;
}

.collect-container {
    width: 100%;
}

.collect-container .title {
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    background: var(--backColor);
}

.empty-container {
    /* position: relative; */
    margin-top: 150rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.empty-container image {
    width: 200rpx;
    height: 180rpx;
    /* position: absolute;
    top: 150rpx;
    left: 270rpx; */
}

.list-container {
    width: 100%;
    padding: 40rpx 90rpx;
    /* display: flex;
    flex-wrap: wrap;
    justify-content: space-around; */
}

.list-container v-collection {
    display: inline-block;
}

.list-container v-collection:nth-child(odd) {
    margin-right: 80rpx;
}


