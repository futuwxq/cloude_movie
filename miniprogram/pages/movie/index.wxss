/**index.wxss**/

page {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    align-items: center;
    background: #fff;
    justify-content: space-between;
    border-top: 1px solid #e6e2e2;
    border-bottom: 1px solid #e6e2e2;
}

.poster {
    margin-top: 100rpx;
}

.episode {
    flex: 1;
    margin-left: 20rpx;
    margin-top: 4rpx;
}

.like {
    margin-top: 6rpx;
}

.like_container {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: flex-end;
    margin-right: 30rpx;
}

.share-btn button {
    width: 60rpx !important;
    height: 60rpx;
}

.share-btn {
    width: 60rpx;
    height: 60rpx;
    margin-top: 24rpx;
}

.share {
    width: 40rpx;
    height: 40rpx;
}

.move-cover {
    width: 100%;
}