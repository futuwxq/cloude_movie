<!--pages/profile/index.wxml-->
<view class="container">
  <image src="/images/my-back.jpg" class="bg" />
  <v-login-button  wx:if="{{!authorized}}"  open-type="getUserInfo" class="avatar-position" bindgetInfo="onGetInfo">
    <image slot="img" class="avatar" src="/images/my.png" />
  </v-login-button>
  <view wx:if="{{authorized}}" class="avatar-container avatar-position">
        <image src="{{userInfo.avatarUrl}}" class="avatar" />
        <text>{{userInfo.nickName}}</text>
  </view>
  <view class="about-container">
    <view class="about item">
      <image src="/images/about.png" />
      <text>关于程序</text>
    </view>
    <view class="share item">
      <image src="/images/share_.png" />
      <text>分享好物</text>
    </view>
  </view>
  <view class="collect-container">
    <view class="title">收藏夹</view>
    <view class="list-container">
      <view class="empty-container">
      <image src="/images/empty.png" />
      </view>
    </view>
  </view>
</view>